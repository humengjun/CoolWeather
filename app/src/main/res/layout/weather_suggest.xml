<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weather_suggest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="#8000"
    android:padding="10dp">

    <TextView
        android:id="@+id/suggest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生活建议"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_comfort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/suggest_name" />

    <TextView
        android:id="@+id/tv_car_wash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_comfort" />

    <TextView
        android:id="@+id/tv_sport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_car_wash" />

</android.support.constraint.ConstraintLayout>